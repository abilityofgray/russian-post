{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": false,
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "printWidth": 20
      }
    },
    {
      "files": ["*.html", "**/*.html"],
      "options": {
        "ignorePhpContents": true,
        "parser": "html",
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}